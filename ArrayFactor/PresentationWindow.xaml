<Window x:Class="ArrayFactor.PresentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:ArrayFactor"
        xmlns:lv="clr-namespace:ArrayFactor.View"
        xmlns:lm="clr-namespace:ArrayFactor.View.Models"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="{Binding CurrentModel.Title}" Height="700" Width="1024">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/ViewModelsTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ContextMenu x:Key="SystemMenu">
                <MenuItem>123</MenuItem>
            </ContextMenu>
        </ResourceDictionary>
    </Window.Resources>
    <Window.DataContext>
        <l:PresentationModel CurrentModelIndex="5"/>
    </Window.DataContext>
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="#180f35" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <ContentControl Content="{Binding CurrentModel}"/>
    </Grid>
</Window>
